[core]
  editor = vim
  excludesfile = ~/.gitignore_global
  ignorecase = false
  autocrlf = true

[alias]
  la = log --all --date-order --decorate --graph --oneline
  sync = "!git pull -r --autostash upstream \"$(git rev-parse --abbrev-ref HEAD)\""

[rebase]
  autoStash = true

[commit]
  template = ~/.gitcommit.template
